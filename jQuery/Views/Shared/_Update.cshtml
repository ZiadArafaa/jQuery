@model Author
<div class="container m-3">

    <form data-ajax="true" data-ajax-method="post"
          data-ajax-success="onModalSuccess()"
          data-ajax-failure="onModalFailure()"
          asp-controller="Home">

        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="Email" class="form-label">Email </label>
                <input type="text" asp-for="Email" class="form-control">
                <span asp-validation-for="Email"></span>
            </div>
            <input type="hidden" asp-for="Id" value="@Model.Id"/>
            <div class="col-6">
                <label asp-for="Name" class="form-label">Name</label>
                <input type="text" asp-for="Name" class="form-control">
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-6 ">
                <label asp-for="Salary" class="form-label">Salary </label>
                <input type="number" asp-for="Salary" class="form-control">
                <span asp-validation-for="Salary"></span>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>

</div>